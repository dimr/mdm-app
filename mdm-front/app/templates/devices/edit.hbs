<h1>Edit Device</h1>

<!--<EditEmployee test="test" />-->

<form>
  <div class="form-group">
    <label for="name">Serial Number</label>
    <Input @type="text" class="form-control" @id="serial_number" @value={{@model.serial_number}} />
  </div>
  <div class="form-group">
    <label for="email">Device type</label>
    <Input @type="text" class="form-control" @id="type"  @value={{@model.type}} />
  </div>
  <div class="form-group">
    <label for="company">Employee Id</label>
    <Input @type="text" class="form-control" @id="employee_id"  @value={{@model.employee_id}} />
  </div>
  <button {{action "edit_device" @model}} type="submit">
    Send
  </button>
</form>